        <TextView android:textSize="16.0sp" android:layout_gravity="right" android:id="@id/device_name_key_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bluetooth_device_name" />
        <TextView android:textSize="16.0sp" android:id="@id/device_name_value_id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
